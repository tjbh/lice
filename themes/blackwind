alias fmt.gone_msg return is away, $0-
alias fmt.usergreet return <$0> $1-
alias fmt.action return 12* 16$0${iscurchan($1)?[]:[\14:$1]} $2-
alias fmt.action_me return 12* 16$014/12$N $2-
