ALIAS fmt.whois_mid {
  IF (temp.whois_user) {
    ECHO  ³ ÀÄÃÙ user ú $temp.whois_user15@15$temp.whois_host
    ^ASSIGN -temp.whois_user
    ^ASSIGN -temp.whois_host
  }
  SWITCH ($0) {
    (Ircname)   {RETURN  ³  ÚÁ. name ú $1-}
    (Channels)  {RETURN  ³  . ³ chan ú $1-}
    (Server)    {RETURN ÚùÄ-³Ä¿ serv ú $1-}
    (Away)      {RETURN  ³    ³ away ú $1-}
    (Idle)      {RETURN  ³  Ú-Ù idle ú $1-}
    (Operator)  {RETURN  ³    ³ oper ú irc operator}
    (*)         {RETURN $0-}
  } 
}
