ALIAS fmt.sc_max	RETURN 5
ALIAS fmt.sc_mid (list) {
  FE ($list) xx {
    @ :cnt++
    # ECHO $cnt
    @ :mod = pass(@+% $xx)
    IF (strlen($mod)) {
      @ :spc = [15] ## mod ## []
      @ :nic = mid(0 9 $strip(@+% $xx))
    }{
      @ :spc = [ ]
      @ :nic = mid(0 9 $xx)
    }
    @ :len = 10 - strlen($nic)
    @ :ret #= spc ## nic ## pad($len " ")
    IF (cnt < 5) {@ :ret #= [15ú ]} {@ :cnt = []} 
  }
  IF (numwords($list) < 5) {
    @ :_x = 4 - numwords($list)
    WHILE (_x) {
      @ :_x-- 
      @ :ret #= pad(11 " ") ## [15ú ]
    }
    UNLESS (_x) {@ :ret #= pad(11 " ")}
  }
  RETURN  14³ 15³ $ret14³ 15³
}
