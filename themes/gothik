PACKAGE LiCeTheme

ALIAS gothik.uptime {
  @ :_x = tdiff2(${time() - F})
  @ :_d = before(d $_x)
  @ sar(r/$(_d)d//_x) 
  @ :_h = before(h $_x)
  @ sar(r/$(_h)h//_x)
  @ :_m = before(m $_x)
  @ sar(r/$(_m)//_x)
  @ :_o = pad(-3 0 $(_d)d) ## pad(-3 0 $(_h)h) ## pad(-3 0 $(_m)m)
  @ sar(gr/ /./_o)
  RETURN $_o
}

