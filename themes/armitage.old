ALIAS fmt.sc_mid (list) {
@ :cnt = 0
FE ($list) xx {
  @ :cnt++
  @ :mod = pass(@+ $xx)
  @ :spc = mod ? mod : [ ]
  @ :nic = strip(@+ $xx)
  @ :ret #= [14\[12] ## spc ## [2] ## [$[10]nic] ## [${cnt!=fmt.sc_max()?[14\] ]:[]}]
}
		      RETURN 12บ $ret
}
