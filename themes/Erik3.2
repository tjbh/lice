ALIAS fmt.playmsg (num,tot,mtime,mnick,muh,mtext) {
  ECHO [Num: $num/$tot - $stime($mtime) \($tdiff2(${time() - mtime}) ago\)]
  ECHO 10From: $mnick \($muh\)
  @ :width = word(0 $geom()) - 2
  @ :fix = (strlen($mtext) > width) ? CONTINUED_LINE ## mtext : mtext
  ECHO $fix
}
