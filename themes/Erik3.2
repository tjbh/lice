ALIAS fmt.sc_mid (list) {
  FE ($list) xx {
    @ :mod = pass(@+ $xx)
    IF (strlen($mod)) {
      @ :spc = [16] ## mod ## []
      @ :nic = mid(0 9 $strip(@+ $xx))
    }{
      @ :spc = [ ]
      @ :nic = mid(0 9 $xx)
    }
    @ :len = 10 - strlen($nic)
    @ :ret #= spc ## nic ## pad($len " ")
  }
  RETURN $ret
}
